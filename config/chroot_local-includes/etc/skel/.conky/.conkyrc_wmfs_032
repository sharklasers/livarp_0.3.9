^s[right;\#E07C00; ${acpitemp}Â°C]\
^s[right;\#6DDD00; :: ]\
^s[right;\#AABBAA;ram:](1;spawn;urxvtc -e htop) ^s[right;\#43E000; $memperc%] ^s[right;\#AABBAA; $mem]\
^s[right;\#6DDD00; :: ]\
^s[right;\#AABBAA;hdd:](1;spawn;urxvtc -e ncdu) ^s[right;\#008BE0; ${fs_used_perc /}% ] ^p[right;40;8;1;${fs_used_perc /};100;\#7D7D7D;\#222222]\
^s[right;\#6DDD00; :: ]\
^s[right;\#AABBAA;vol:](1;spawn;urxvtc -T sound -e alsamixer) \
^p[right;40;8;1;${exec amixer get Master | tail -1 | sed 's/.*\[\([0-9]*%\)\].*/\1/' | cut -d% -f1};100;\#63b8ff;\#222222]\
