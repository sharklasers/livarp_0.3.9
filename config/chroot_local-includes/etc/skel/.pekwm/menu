  		}
        Submenu = "Config" {
  		    Entry = "open pekwm dir" { Actions = "Exec $FILER ~/.pekwm &" }
  		    Entry = "edit pekwm startup" { Actions = "Exec $EDITOR bin/start/pekwm_start.sh &" }
  		    Entry = "edit pekwm menu" { Actions = "Exec $EDITOR .pekwm/menu &" }
